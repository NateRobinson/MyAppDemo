<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black_txt</item>
    </style>

    <!-- textview样式基类 -->
    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 符合设计规范的字体12,14,18,22sp -->
    <style name="TextView12" parent="TextViewBase">
        <item name="android:textSize">@dimen/text_font_size_small_12sp</item>
    </style>

    <style name="TextView14" parent="TextViewBase">
        <item name="android:textSize">@dimen/text_font_size_content_14sp</item>
    </style>

    <style name="TextView16" parent="TextViewBase">
        <item name="android:textSize">@dimen/text_font_size_title_16sp</item>
    </style>

    <style name="TextView18" parent="TextViewBase">
        <item name="android:textSize">@dimen/text_font_size_title_18sp</item>
    </style>

    <style name="TextView22" parent="TextViewBase">
        <item name="android:textSize">@dimen/text_font_size_big_22sp</item>
    </style>

    <!-- 符合设计规范的字体12sp -->
    <style name="TextView12_black" parent="TextView12">
        <item name="android:textColor">@color/black_txt</item>
    </style>

    <style name="TextView12_gray" parent="TextView12">
        <item name="android:textColor">@color/grey_a4a4a4</item>
    </style>

    <!-- 符合设计规范的字体14sp -->
    <style name="TextView14_balck" parent="TextView14">
        <item name="android:textColor">@color/black_txt</item>
    </style>

    <style name="TextView14_gray" parent="TextView14">
        <item name="android:textColor">@color/grey_a4a4a4</item>
    </style>

    <!-- 符合设计规范的字体16sp -->
    <style name="TextView16_balck" parent="TextView16">
        <item name="android:textColor">@color/black_txt</item>
    </style>

    <style name="TextView16_gray" parent="TextView16">
        <item name="android:textColor">@color/grey_a4a4a4</item>
    </style>

    <!-- 符合设计规范的字体18sp -->
    <style name="TextView18_balck" parent="TextView18">
        <item name="android:textColor">@color/black_txt</item>
    </style>

    <style name="TextView18_gray" parent="TextView18">
        <item name="android:textColor">@color/grey_a4a4a4</item>
    </style>

    <!-- 符合设计规范的字体22sp -->
    <style name="TextView22_balck" parent="TextView22">
        <item name="android:textColor">@color/black_txt</item>
    </style>

    <style name="TextView22_gray" parent="TextView22">
        <item name="android:textColor">@color/grey_a4a4a4</item>
    </style>

    <!-- 首页底部radiobutton样式 -->
    <style name="HomeBottomRadio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height"> match_parent</item>
        <item name="android:layout_gravity">center </item>
        <item name="android:layout_weight">1 </item>
        <item name="android:background"> @null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center </item>
        <item name="android:textSize">12sp </item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <!-- 自定义Design样式-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/two_bg</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/two_bg</item>
    </style>
    <!-- 自定义Design样式tab字体样式-->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_txt</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
